<% if tracker = Spree::Tracker.current(:facebook_pixel) %>
  <script>
    fbq('track', 'AddToCart', {
      value: <%= @order.total.to_f %>,
      currency: '<%= @order.currency %>',
      contents: [
        <%= render partial: 'spree/shared/trackers/facebook/fb_add_items', locals: { order: @order } %>
      ],
      content_type: 'product'
    });
  </script>
<% end %>
