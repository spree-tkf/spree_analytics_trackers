<% if tracker = Spree::Tracker.current(:facebook_pixel) %>
  <script>
    fbq('track', 'ViewContent', {
      value: <%= @product.price_in(current_currency).amount.to_f %>,
      currency: '<%= current_currency %>',
      content_ids: '<%= @product.sku %>',
      content_type: 'product'
    });
  </script>
<% end %>
